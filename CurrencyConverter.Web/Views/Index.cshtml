@{
    PageData["title"] = "AngularJS SPA Template for Visual Studio";
}
<h2>Welcome!</h2>
<hr/>
<div class="row">
    <div class="col-xs-2"><label>From Amount</label></div>
    <div class="col-xs-3"><label>From Currency</label></div>
    <div class="col-xs-4"></div>
</div>

<div class="row">
    <div class="col-xs-2">
        <input id="from-amount" ng-pattern="/^[0-9]+(\.[0-9]{1,2})?$/" step="0.01" class="form-control" type="number" ng-model="fromAmount" ng-change="convert()" placeholder="From Amount" />
    </div>
    <div class="col-xs-3">
        <button id="from-currency"
                type="button"
                class="btn btn-default"
                ng-model="selectedFromCurrency"
                ng-change="fromCurrencyChanged()"
                data-html="1"
                data-bs-options="fromCurrency.value as fromCurrency.label for fromCurrency in allFromCurrency"
                data-bs-select>
            Select <span class="caret"></span>
        </button>
    </div>
    <div class="col-xs-4">
    </div>
</div>
<br/>
<div class="row">
    <div class="col-xs-2">
        <input type="number"  step="0.01" class="form-control" readonly="" ng-model="toAmount" /><br/>
    </div>
    <div class="col-xs-3">
        <button type="button"
                class="btn btn-default"
                ng-change="convert()"
                ng-model="selectedToCurrency"
                data-html="1"
                data-bs-options="toCurrency.value as toCurrency.label for toCurrency in allToCurrency"
                data-bs-select>
            Select <span class="caret"></span>
        </button>
    </div>
    <div class="col-xs-4">
    </div>
</div>